<style>
.job-card {
    background: white;
    border: 1px solid #E5E7EB;
    border-radius: 12px;
    padding: 24px;
    margin-bottom: 16px;
    transition: all 0.2s;
}

.job-card:hover {
    border-color: #D1D5DB;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.04);
}

.job-header {
    display: flex;
    gap: 16px;
    margin-bottom: 16px;
}

.company-logo {
    width: 48px;
    height: 48px;
    object-fit: contain;
    border: 1px solid #E5E7EB;
    border-radius: 8px;
    background: white;
}

.job-meta {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
    color: #6B7280;
    font-size: 13px;
    margin: 12px 0;
}

.job-meta span {
    display: flex;
    align-items: center;
    gap: 4px;
}

.job-actions {
    display: flex;
    gap: 12px;
    margin-top: 16px;
    flex-wrap: wrap;
}

.search-bar {
    background: white;
    border-bottom: 1px solid #E5E7EB;
    padding: 24px 0;
    margin-bottom: 24px;
}

.badge {
    padding: 4px 10px;
    border-radius: 6px;
    font-size: 12px;
    font-weight: 500;
}

.badge-remote {
    background: #D1FAE5;
    color: #065F46;
}

.modal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    z-index: 1000;
    align-items: center;
    justify-content: center;
}

.modal.active {
    display: flex;
}

.modal-content {
    background: white;
    padding: 32px;
    border-radius: 12px;
    max-width: 400px;
    width: 90%;
}

.modal-actions {
    display: flex;
    gap: 12px;
    margin-top: 24px;
}
</style>

<div class="search-bar">
    <div class="container">
        <h2 style="margin-bottom: 16px;">Results for "{{query}}" in {{location}}</h2>
        
        <form action="/search" method="GET" style="margin-bottom: 16px;">
            <div style="display: grid; grid-template-columns: 1fr 1fr auto; gap: 12px; margin-bottom: 12px;">
                <input type="text" name="q" value="{{query}}" placeholder="Job title" required>
                <input type="text" name="l" value="{{location}}" placeholder="Location">
                <button type="submit" class="btn">
                    <svg width="16" height="16" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="7" cy="7" r="5"/>
                        <path d="M11 11l3 3"/>
                    </svg>
                    Search
                </button>
            </div>
            
            <!-- Filters -->
            <details {{#if activeFilters.employment_type}}open{{/if}}>
                <summary style="cursor: pointer; font-size: 14px; color: #6B7280; margin-bottom: 12px; font-weight: 500;">
                    Filters {{#if activeFilters.employment_type}}(Active){{/if}}
                </summary>
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(180px, 1fr)); gap: 12px; padding: 12px; background: #F9FAFB; border-radius: 8px;">
                    <select name="employment_type" style="padding: 8px; font-size: 13px;">
                        <option value="">All Types</option>
                        <option value="FULLTIME">Full-time</option>
                        <option value="INTERN">Internship</option>
                        <option value="PARTTIME">Part-time</option>
                        <option value="CONTRACTOR">Contract</option>
                    </select>
                    
                    <select name="remote_jobs_only" style="padding: 8px; font-size: 13px;">
                        <option value="">All Locations</option>
                        <option value="true">Remote Only</option>
                        <option value="false">On-site/Hybrid</option>
                    </select>
                    
                    <select name="job_requirements" style="padding: 8px; font-size: 13px;">
                        <option value="">All Levels</option>
                        <option value="no_experience">Entry Level</option>
                        <option value="under_3_years_experience">Under 3 Years</option>
                        <option value="more_than_3_years_experience">3+ Years</option>
                    </select>
                    
                    <select name="date_posted" style="padding: 8px; font-size: 13px;">
                        <option value="all">All Time</option>
                        <option value="today">Today</option>
                        <option value="3days">Past 3 Days</option>
                        <option value="week">Past Week</option>
                        <option value="month">Past Month</option>
                    </select>
                </div>
            </details>
        </form>
    </div>
</div>

<div class="container">
    {{#if error}}
    <div style="text-align: center; padding: 60px 20px;">
        <p style="color: #EF4444; font-size: 16px;">{{error}}</p>
        <a href="/" class="btn" style="margin-top: 16px;">Try Again</a>
    </div>
    {{else}}
    {{#each jobs}}
    <div class="job-card">
        <div class="job-header">
            {{#if this.employer_logo}}
            <img src="{{this.employer_logo}}" alt="{{this.employer_name}}" class="company-logo">
            {{/if}}
            <div style="flex: 1;">
                <h3>{{this.job_title}}</h3>
                <p style="color: #6B7280; margin-top: 4px; font-size: 15px;">{{this.employer_name}}</p>
            </div>
        </div>
        
        <div class="job-meta">
            {{#if this.job_city}}
            <span>üìç {{this.job_city}}{{#if this.job_state}}, {{this.job_state}}{{/if}}</span>
            {{/if}}
            {{#if this.job_employment_type}}
            <span>üíº {{this.job_employment_type}}</span>
            {{/if}}
            {{#if this.job_is_remote}}
            <span class="badge badge-remote">Remote</span>
            {{/if}}
        </div>
        
        <p style="color: #4B5563; line-height: 1.7; margin-top: 12px; font-size: 14px;">
            {{truncate this.job_description 280}}
        </p>
        
        <div class="job-actions">
            <a href="{{this.job_apply_link}}" 
               target="_blank" 
               class="btn"
               onclick="handleApplyClick(event, '{{this.job_id}}', '{{this.job_title}}', '{{this.employer_name}}', '{{this.job_apply_link}}')">
                Apply
            </a>
            <button class="btn btn-secondary" 
                    onclick="saveForLater('{{this.job_id}}', '{{this.job_title}}', '{{this.employer_name}}', '{{this.job_apply_link}}')">
                Save for Later
            </button>
        </div>
    </div>
    {{else}}
    <div style="text-align: center; padding: 60px 20px;">
        <h3>No jobs found</h3>
        <p style="color: #6B7280; margin-top: 8px;">Try different keywords or location</p>
        <a href="/" class="btn" style="margin-top: 16px;">New Search</a>
    </div>
    {{/each}}
    {{/if}}
</div>

<!-- Apply Modal -->
<div id="applyModal" class="modal">
    <div class="modal-content">
        <h3 style="margin-bottom: 16px;">Did you apply to this job?</h3>
        <p style="color: #6B7280; font-size: 14px; margin-bottom: 24px;">We'll track it in your dashboard</p>
        
        <div class="modal-actions">
            <button class="btn" onclick="confirmApplied()">Yes, I Applied</button>
            <button class="btn btn-secondary" onclick="closeModal()">Not Yet</button>
        </div>
    </div>
</div>

<!-- Login Required Modal -->
<div id="loginModal" class="modal">
    <div class="modal-content">
        <h3 style="margin-bottom: 16px;">Sign in required</h3>
        <p style="color: #6B7280; font-size: 14px; margin-bottom: 24px;">Please sign in with Google to save jobs and track your applications</p>
        
        <div class="modal-actions">
            <a href="/login" class="btn" style="text-decoration: none;">Sign In with Google</a>
            <button class="btn btn-secondary" onclick="closeLoginModal()">Cancel</button>
        </div>
    </div>
</div>

<script>
let pendingApplication = null;

// Check if user is authenticated
async function checkAuth() {
    try {
        const res = await fetch('/api/auth-status');
        const data = await res.json();
        return data.authenticated;
    } catch (err) {
        return false;
    }
}

function handleApplyClick(event, jobId, title, company, link) {
    event.preventDefault();
    
    pendingApplication = {
        id: jobId,
        title: title,
        company: company,
        link: link
    };
    
    window.open(link, '_blank');
    
    setTimeout(() => {
        document.getElementById('applyModal').classList.add('active');
    }, 500);
}

async function confirmApplied() {
    if (pendingApplication) {
        await saveToTracker(
            pendingApplication.id,
            pendingApplication.title,
            pendingApplication.company,
            pendingApplication.link,
            'applied'
        );
        
        closeModal();
        pendingApplication = null;
    }
}

function closeModal() {
    document.getElementById('applyModal').classList.remove('active');
}

function closeLoginModal() {
    document.getElementById('loginModal').classList.remove('active');
}

async function saveForLater(jobId, title, company, link) {
    await saveToTracker(jobId, title, company, link, 'saved');
}

async function saveToTracker(jobId, title, company, link, status) {
    console.log('=== SAVING JOB ===');
    
    // Check if user is logged in
    const isAuthenticated = await checkAuth();
    
    if (!isAuthenticated) {
        console.log('User not authenticated');
        document.getElementById('loginModal').classList.add('active');
        return;
    }
    
    const jobData = {
        jobId: jobId,
        title: title,
        company: company,
        link: link,
        status: status
    };

    try {
        const res = await fetch('/api/jobs', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(jobData)
        });

        const data = await res.json();
        console.log('Server response:', data);

        if (res.ok && data.success) {
            const message = status === 'applied' 
                ? '‚úì Added to tracker as Applied!' 
                : '‚úì Saved for later!';
            showNotification(message);
        } else {
            throw new Error(data.message || 'Failed to save');
        }
        
    } catch (err) {
        console.error('=== SAVE ERROR ===', err);
        showNotification('‚ùå Failed to save. Please try again.');
    }
}

function showNotification(message) {
    const notification = document.createElement('div');
    notification.style.cssText = `
        position: fixed;
        bottom: 24px;
        right: 24px;
        background: #111827;
        color: white;
        padding: 16px 24px;
        border-radius: 8px;
        font-size: 14px;
        font-weight: 500;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
        z-index: 1001;
        animation: slideIn 0.3s ease;
    `;
    notification.textContent = message;
    document.body.appendChild(notification);
    
    setTimeout(() => {
        notification.style.animation = 'slideOut 0.3s ease';
        setTimeout(() => notification.remove(), 300);
    }, 3000);
}

const style = document.createElement('style');
style.textContent = `
    @keyframes slideIn {
        from { transform: translateX(400px); opacity: 0; }
        to { transform: translateX(0); opacity: 1; }
    }
    @keyframes slideOut {
        from { transform: translateX(0); opacity: 1; }
        to { transform: translateX(400px); opacity: 0; }
    }
`;
document.head.appendChild(style);

document.getElementById('applyModal').addEventListener('click', function(e) {
    if (e.target === this) closeModal();
});

document.getElementById('loginModal').addEventListener('click', function(e) {
    if (e.target === this) closeLoginModal();
});

console.log('Results page loaded');
</script>
